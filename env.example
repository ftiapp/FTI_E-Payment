GS1_2C2P_SECRET_KEY=your_gs1_secret_key
GS1_2C2P_API_VERSION=1.0
GS1_2C2P_PAYMENT_URL=https://demo2.2c2p.com/redirectio/2c2p/payment

# 2C2P API Endpoints
